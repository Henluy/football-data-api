{
    "openapi": "3.1.0",
    "info": {
      "title": "FootyStats API",
      "description": "API fournissant des statistiques de football. Requiert une clé API valide pour l'accès.",
      "version": "v1.0.0"
    },
    "servers": [
      {
        "url": "https://api.football-data-api.com",
        "description": "Serveur principal"
      }
    ],
    "paths": {
      "/league-list": {
        "get": {
          "operationId": "getLeagueList",
          "summary": "Liste des ligues",
          "description": "Récupère une liste de toutes les ligues disponibles. Requiert une clé API valide.",
          "parameters": [
            {
              "name": "key",
              "in": "query",
              "required": true,
              "description": "Votre clé API",
              "schema": {
                "type": "string",
                "example": "21b5268e41a6dc509b2694bf67ae40cb22cd1e5489adc8625a3416255802ff36"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Liste des ligues récupérée avec succès",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "league_id": {
                          "type": "integer",
                          "description": "Identifiant unique de la ligue"
                        },
                        "name": {
                          "type": "string",
                          "description": "Nom de la ligue"
                        },
                        "country": {
                          "type": "string",
                          "description": "Pays de la ligue"
                        }
                      }
                    }
                  }
                }
              }
            },
            "401": {
              "description": "Clé API invalide ou non autorisée",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "error": {
                        "type": "string",
                        "description": "Message d'erreur"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "/league-matches": {
        "get": {
          "operationId": "getLeagueMatches",
          "summary": "Liste des matchs d'une ligue",
          "description": "Récupère les matchs d'une ligue spécifique. Requiert une clé API valide et un `league_id`.",
          "parameters": [
            {
              "name": "key",
              "in": "query",
              "required": true,
              "description": "Votre clé API",
              "schema": {
                "type": "string"
              }
            },
            {
              "name": "league_id",
              "in": "query",
              "required": true,
              "description": "Identifiant de la ligue",
              "schema": {
                "type": "integer"
              }
            },
            {
              "name": "season",
              "in": "query",
              "required": false,
              "description": "Année de la saison",
              "schema": {
                "type": "integer"
              }
            },
            {
              "name": "from",
              "in": "query",
              "required": false,
              "description": "Date de début au format YYYY-MM-DD",
              "schema": {
                "type": "string",
                "format": "date"
              }
            },
            {
              "name": "to",
              "in": "query",
              "required": false,
              "description": "Date de fin au format YYYY-MM-DD",
              "schema": {
                "type": "string",
                "format": "date"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Liste des matchs récupérée avec succès",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "match_id": {
                          "type": "integer",
                          "description": "Identifiant unique du match"
                        },
                        "home_team": {
                          "type": "string",
                          "description": "Nom de l'équipe à domicile"
                        },
                        "away_team": {
                          "type": "string",
                          "description": "Nom de l'équipe à l'extérieur"
                        },
                        "date": {
                          "type": "string",
                          "format": "date-time",
                          "description": "Date et heure du match"
                        },
                        "score": {
                          "type": "object",
                          "description": "Score final du match",
                          "properties": {
                            "home": {
                              "type": "integer",
                              "description": "Nombre de buts de l'équipe à domicile"
                            },
                            "away": {
                              "type": "integer",
                              "description": "Nombre de buts de l'équipe à l'extérieur"
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            },
            "401": {
              "description": "Clé API invalide ou non autorisée"
            }
          }
        }
      }
    },
    "components": {
      "schemas": {}
    }
  }
  