{
  "openapi": "3.1.0",
  "info": {
    "title": "FootyStats API",
    "description": "API de données de football fournissant des statistiques détaillées pour les prédictions et analyses.",
    "version": "v1.0.0"
  },
  "servers": [
    {
      "url": "https://api.football-data-api.com",
      "description": "Serveur principal de l'API FootyStats"
    }
  ],
  "paths": {
    "/league-list": {
      "get": {
        "operationId": "getLeagueList",
        "summary": "Obtenir la liste des ligues",
        "description": "Récupère une liste de toutes les ligues disponibles.",
        "parameters": [
          {
            "name": "key",
            "in": "query",
            "required": true,
            "description": "Votre clé API",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Liste des ligues récupérée avec succès",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "league_id": {
                        "type": "integer",
                        "description": "Identifiant unique de la ligue"
                      },
                      "name": {
                        "type": "string",
                        "description": "Nom de la ligue"
                      },
                      "country": {
                        "type": "string",
                        "description": "Pays de la ligue"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/league-matches": {
      "get": {
        "operationId": "getLeagueMatches",
        "summary": "Obtenir les matchs d'une ligue",
        "description": "Récupère les matchs pour une ligue spécifique.",
        "parameters": [
          {
            "name": "key",
            "in": "query",
            "required": true,
            "description": "Votre clé API",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "league_id",
            "in": "query",
            "required": true,
            "description": "Identifiant de la ligue",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Liste des matchs récupérée avec succès",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "match_id": {
                        "type": "integer",
                        "description": "Identifiant unique du match"
                      },
                      "home_team": {
                        "type": "string",
                        "description": "Équipe à domicile"
                      },
                      "away_team": {
                        "type": "string",
                        "description": "Équipe à l'extérieur"
                      },
                      "date": {
                        "type": "string",
                        "format": "date-time",
                        "description": "Date et heure du match"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/team": {
      "get": {
        "operationId": "getTeamData",
        "summary": "Obtenir les données d'une équipe",
        "description": "Récupère les informations et statistiques pour une équipe spécifique.",
        "parameters": [
          {
            "name": "key",
            "in": "query",
            "required": true,
            "description": "Votre clé API",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "team_id",
            "in": "query",
            "required": true,
            "description": "Identifiant de l'équipe",
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "include",
            "in": "query",
            "required": false,
            "description": "Paramètre optionnel pour inclure des informations supplémentaires, comme les statistiques",
            "schema": {
              "type": "string",
              "enum": ["stats"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Données de l'équipe récupérées avec succès",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "team_id": {
                      "type": "integer",
                      "description": "Identifiant unique de l'équipe"
                    },
                    "name": {
                      "type": "string",
                      "description": "Nom de l'équipe"
                    },
                    "country": {
                      "type": "string",
                      "description": "Pays de l'équipe"
                    },
                    "stats": {
                      "type": "object",
                      "description": "Statistiques de l'équipe, incluses si le paramètre 'include=stats' est présent"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/league-tables": {
      "get": {
        "operationId": "getLeagueTables",
        "summary": "Obtenir les classements d'une ligue",
        "description": "Récupère les classements pour une saison de ligue spécifique.",
        "parameters": [
          {
            "name": "key",
            "in": "query",
            "required": true,
            "description": "Votre clé API",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "season_id",
            "in": "query",
            "required": true,
            "description": "Identifiant de la saison de la ligue",
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "max_time",
            "in": "query",
            "required": false,
            "description": "Horodatage UNIX. Définit cette valeur si vous souhaitez que l'API retourne les statistiques de la ligue et des équipes jusqu'à un certain moment.",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Classements de la ligue récupérés avec succès",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "league_table": {
                      "type": "array",
                      "description": "Classement principal de la ligue",
                      "items": {
                        "type": "object",
                        "properties": {
                          "position": {
                            "type": "integer",
                            "description": "Position au classement"
                          },
                          "team_name": {
                            "type": "string",
                            "description": "Nom de l'équipe"
                          },
                          "points": {
                            "type": "integer",
                            "description": "Points accumulés"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {}
  }
}
